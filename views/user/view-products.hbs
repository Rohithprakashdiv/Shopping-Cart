<style>

.card__one {
  transition: transform .5s;

  &::after {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: opacity 2s cubic-bezier(.165, .84, .44, 1);
    box-shadow: 0 8px 17px 0 rgba(0, 0, 0, .2), 0 6px 20px 0 rgba(0, 0, 0, .15);
    content: '';
    opacity: 0;
    z-index: -1;
  }

  &:hover,
  &:focus {
    transform: scale3d(1.006, 1.006, 1);

    &::after {
      opacity: 1;
    }
  }
}

</style>
<section>
    <div class="container mt-5">
    <div class="row">
      {{#each prodects}}
        <div class="col-6 col-md-3 p-3">
             <div class="card mb-4 card__one" style=" cursor: pointer;" onclick="location.href='/details/{{this._id}}';" >
              <img src="/product-image/{{this._id}}.jpg" style="height:12rem;">
                   <div class="card-body text-center">
                      <h5 class="card-title">{{this.Name}}</h5>
                      <h6 class="card-title">â‚¹{{this.Price}}</h6>
                        
                       
                         <button onclick="addToCart('{{this._id}}')" class="btn btn-primary ">Add to Cart </button>
                            </div>
                               </div>
        
        </div>
        
        {{/each}}
        
    </div>
    </div>
   
</section>
