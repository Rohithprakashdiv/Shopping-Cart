<section>
    <div class="container">
       <div class=" mt-3 mb-3" style="float: right;">
            <a href="/admin/add-product" class="btn btn-success"> Add prodects</a>

      </div>
      
       
        <table class="table table-bordered display" id="myTable" >
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each prodects}}
    <tr>
     
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img  style="width: 50px;height: 50%; " src="/product-image/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn btn-info">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn btn-danger" onclick="return confirm('are you want to delete{{this.Name}}?')">Delete</a>
        </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>


    </div>



</section>
<script>
$( function () {
    $('#myTable').DataTable();
} );
</script>